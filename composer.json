{
    "name": "bibaltik/hackathon",
    "description": "Evaluation project for the Hackathon on the Discord server from BlackScorp",
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "BibaltiK",
            "email": "bibaltik@exdrals.de"
        }
    ],
    "keywords": [
        "BlackScorp",
        "Hackathon",
        "Discord"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "laminas/laminas-component-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "doctrine": "php ./bin/migrations.php",
        "openapi": "php ./vendor/bin/openapi ./src -f json -o ./public/api/doc/swagger.json",
        "phplint": "vendor/bin/phplint",
        "phpcs": "phpcs --standard=phpcs.xml -s",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon --xdebug",
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit",
        "check": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "composer/package-versions-deprecated": "^1.11.99.4",
        "doctrine/migrations": "^3.5",
        "envms/fluentpdo": "^2.2.0",
        "firebase/php-jwt": "^5.4",
        "laminas/laminas-component-installer": "^3.2.0",
        "laminas/laminas-config-aggregator": "^1.6.0",
        "laminas/laminas-diactoros": "^2.8.0",
        "laminas/laminas-hydrator": "^4.3.1",
        "laminas/laminas-inputfilter": "^2.12",
        "laminas/laminas-servicemanager": "^3.10",
        "laminas/laminas-stdlib": "^3.6.0",
        "laminas/laminas-validator": "^2.15",
        "laminas/laminas-zendframework-bridge": "^1.4.0",
        "mezzio/mezzio": "^3.6.0",
        "mezzio/mezzio-fastroute": "^3.3.0",
        "mezzio/mezzio-helpers": "^5.7.0",
        "ramsey/uuid": "^4.3",
        "symfony/mailer": "^6.1",
        "zircote/swagger-php": "^4.6",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "require-dev": {
        "filp/whoops": "^2.14.4",
        "overtrue/phplint": "^5.3",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Administration\\": "src/Administration",
            "App\\": "src/App/",
            "Authentication\\": "src/Authentication",
            "Migrations\\": "database/migrations"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/App",
            "Authentication\\Test\\": "tests/Authentication"
        }
    }
}
