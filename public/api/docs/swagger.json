{
    "openapi": "3.0.0",
    "info": {
        "title": "ownHackathon API Overview",
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/ping": {
            "get": {
                "tags": [
                    "System Information"
                ],
                "summary": "Returns the current time in Unix format",
                "operationId": "b8e0f8d7333cccda411833fd8b3e4f30",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "ack": {
                                            "description": "actually request time",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/me/workspaces": {
            "get": {
                "tags": [
                    "Workspace"
                ],
                "summary": "Returns a collection of all workspaces owned by or associated with the currently authenticated user.",
                "description": "List all workspaces for the authenticated account",
                "operationId": "findOwnWorkspaces",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The page number to retrieve.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "The number of items to return per page.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 25,
                            "maximum": 250,
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of workspaces belonging to the user.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "workspaces": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/WorkspaceResponse"
                                            }
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationMeta"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Authentication failed. The access token is missing or invalid.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "Exdrals\\Identity\\DTO\\Response\\HttpResponseMessage"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "accessToken": []
                    }
                ]
            }
        },
        "/workspace": {
            "post": {
                "tags": [
                    "Workspace"
                ],
                "summary": "Create a new workspace",
                "description": "Creates a new workspace for the authenticated user. Workspaces are used to group related resources (e.g., events).",
                "operationId": "createWorkspace",
                "requestBody": {
                    "description": "The data for the new workspace. At a minimum, a name is required.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/WorkspaceRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Workspace created successfully. The response contains the details of the newly created workspace.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/WorkspaceResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input. The provided workspace name may be empty, too long, or contain invalid characters.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "Exdrals\\Identity\\DTO\\Response\\HttpResponseMessage"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Authentication failed. The access token is missing or invalid.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "Exdrals\\Identity\\DTO\\Response\\HttpResponseMessage"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "A workspace with this name already exists.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "Exdrals\\Identity\\DTO\\Response\\HttpResponseMessage"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "accessToken": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "PaginationMeta": {
                "title": "Pagination Meta",
                "description": "Info about the number of pages and limits",
                "properties": {
                    "currentPage": {
                        "type": "integer",
                        "example": 1
                    },
                    "totalPages": {
                        "type": "integer",
                        "example": 10
                    },
                    "totalItems": {
                        "type": "integer",
                        "example": 100
                    }
                },
                "type": "object"
            },
            "WorkspaceList": {
                "properties": {
                    "workspaces": {
                        "description": "A list of workspaces",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/WorkspaceResponse"
                        }
                    }
                },
                "type": "object"
            },
            "WorkspaceRequest": {
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "The name from workspace",
                        "type": "string",
                        "example": "My own workspace"
                    },
                    "description": {
                        "description": "The description from workspace",
                        "type": "string",
                        "example": "My own workspace is wonderfully"
                    }
                },
                "type": "object"
            },
            "WorkspaceResponse": {
                "properties": {
                    "uuid": {
                        "description": "The unique identifier of the workspace",
                        "type": "string",
                        "example": "019becbe-f952-7b82-82fa-f41f8ae24599"
                    },
                    "ownerUuid": {
                        "description": "The Uuid from owner for this workspace",
                        "type": "string",
                        "example": "019becbe-f952-7b82-82fa-f41f8ae24599"
                    },
                    "name": {
                        "description": "The name from workspace",
                        "type": "string",
                        "example": "My own workspace"
                    },
                    "slug": {
                        "description": "The slug for this workspace",
                        "type": "string",
                        "example": "my-own-workspace"
                    },
                    "description": {
                        "description": "The desciption for this workspace",
                        "type": "string",
                        "example": "My own workspace is wonderfully"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "accessToken": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            },
            "refreshToken": {
                "type": "apiKey",
                "name": "Authentication",
                "in": "header"
            },
            "Client-Identification-String": {
                "type": "apiKey",
                "name": "x-ident",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "System Information",
            "description": "System Information"
        },
        {
            "name": "Workspace",
            "description": "Workspace"
        }
    ]
}